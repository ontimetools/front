<p class="col-xs-12 col-lg-12 text-center">
    <button class="btn btn-primary btn-sm" type="submit" name="save_stay">
        <i class="fa fa-fw fa-save"></i>
        {% trans %}Save & stay{% endtrans %}
    </button>
    <button class="btn btn-info btn-sm" type="submit" name="save_leave">
        <i class="fa fa-fw fa-save"></i>
        {% trans %}Save & leave{% endtrans %}
    </button>
    <a href="{{ cancel_url }}" class="btn btn-warning btn-sm">
        <i class="fa fa-fw fa-eraser"></i>
        {% trans %}Cancel{% endtrans %}
    </a>
    {% if delete_route is defined %}
        <a href="{{ delete_route }}" class="btn btn-danger btn-sm"
           data-toggle="modal" data-target=".modal">
            <i class="fa fa-fw fa-exclamation-triangle"></i>
            {% trans %}Delete{% endtrans %}
        </a>
    {% endif %}
</p>