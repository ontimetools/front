{% set setting_is_defined = setting is defined %}
{% extends '_layout/master.twig' %}

{% block head_title %}
    {% trans %}
    Edit setting
    {% endtrans %}
    {% if setting_is_defined %}'{{ setting.getName() }}'{% endif %}
{% endblock %}

{% block contextual_menu %}
    <p class="new">
        <a href="{{ url('settings') }}" class="btn btn-primary btn-sm">
            <i class="fa fa-fw fa-angle-double-left"></i>
            {% trans %}Back to list{% endtrans %}
        </a>
    </p>
{% endblock %}

{% block main_content %}
    <div class="row">
        <div id="latest-documents" class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>
                        {% trans %}Edit setting{% endtrans %}
                        {% if setting_is_defined %}'{{ setting.getName() }}'{% endif %}
                    </h3>
                </div>
                <div class="panel-body">
                    {% if setting_is_defined %}
                        {% include 'setting/form/setting.twig' with {setting:setting} %}
                    {% else %}
                        <p>
                            {% trans %}
                            Sorry, but this setting does not exists
                            {% endtrans %}
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}