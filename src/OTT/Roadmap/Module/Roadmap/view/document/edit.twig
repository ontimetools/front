{% set document_is_defined = document is defined %}
{% extends '_layout/master.twig' %}

{% block head_title %}
    {% trans %}
    New document
    {% endtrans %}
{% endblock %}

{% block contextual_menu %}
    <p class="new">
        <a href="{{ url('documents') }}" class="btn btn-primary btn-sm">
            <i class="fa fa-fw fa-angle-double-left"></i>
            {% trans %}Back to list{% endtrans %}
        </a>
    </p>
{% endblock %}

{% block main_content %}
    <div class="row">
        <div id="latest-documents" class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>
                        {% trans %}Edit document {% endtrans %}
                        {% if document_is_defined %}'{{ document.getName() }}'{% endif %}
                    </h3>
                </div>
                <div class="panel-body">
                    {% include 'document/form/document.twig' with {document:document} %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}