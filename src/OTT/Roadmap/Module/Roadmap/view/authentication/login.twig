{% extends '_layout/authentication.twig' %}

{% block head_title %}
    {% trans %}
    Login
    {% endtrans %}
{% endblock %}

{% block page_title %}
    {% trans %}
    Login
    {% endtrans %}
{% endblock %}

{% block main_content %}
    {% if errors is defined %}
        <div class="alert alert-danger">
            <i class="fa fa-fw fa-exclamation-triangle"></i>
            {% set error_description = errors.error_description %}
            {{ error_description }}
        </div>
    {% else %}
        <div class="alert alert-info">
            <strong>
                <i class="fa fa-fw fa-exclamation-circle"></i>
                {% trans %}
                Please note that we are not saving your OnTime creditential.
                {% endtrans %}
            </strong><br/>
            {% trans %}We are just using them to access OnTime's data. {% endtrans %}

        </div>
    {% endif %}
    <form class="form-horizontal" method="post" action="{{ url('loginPost') }}">
        <div class="form-group">
            <label for="username" class="col-lg-3 control-label">
                {% trans %}Username{% endtrans %}
            </label>

            <p class="col-lg-9">
                <input type="text" id="username" name="username" placeholder="OnTime username" class="form-control"
                       required/>
            </p>
        </div>
        <div class="form-group">
            <label for="password" class="col-lg-3 control-label">
                {% trans %}Password{% endtrans %}
            </label>

            <p class="col-lg-9">
                <input type="password" id="password" name="password" class="form-control" placeholder="OnTime password"
                       required/>
            </p>
        </div>
        <div class="form-group">
            <p class="col-lg-2 col-lg-offset-3">
                <button class="btn btn-primary btn-sm" type="submit">{% trans %}Login{% endtrans %}</button>
            </p>
        </div>
    </form>
{% endblock %}
